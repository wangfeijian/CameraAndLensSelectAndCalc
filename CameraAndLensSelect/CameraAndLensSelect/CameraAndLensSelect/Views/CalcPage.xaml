        <Entry
            ClearButtonVisibility="WhileEditing"
            FontSize="11"
            Placeholder="相机型号"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.48}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.5}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.01}"
            Text="{Binding CameraModel}"
            TextColor="#2196f3">
            <Entry.Behaviors>
                <command:EventToCommandBehavior Command="{Binding CameraSelectCommand}" EventName="Completed" />
            </Entry.Behaviors>
        </Entry>
        <Entry
            ClearButtonVisibility="WhileEditing"
            FontSize="11"
            Placeholder="镜头型号"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.48}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.5}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.06}"
            Text="{Binding LensModel}"
            TextColor="#2196f3">
            <Entry.Behaviors>
                <command:EventToCommandBehavior Command="{Binding LensSelectCommand}" EventName="Completed" />
            </Entry.Behaviors>
        </Entry>
        <Label
            FontSize="Small"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.48}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.51}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.12}"
            Text="{Binding SelectCamera.ChipSize, StringFormat=相机芯片大小：\{0\}}"
            TextColor="#2196f3" />
        <Label
            FontSize="Small"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.48}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.51}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.165}"
            Text="{Binding SelectLens.MatchingChip, StringFormat=镜头匹配芯片：\{0\}}"
            TextColor="#2196f3" />
        <Label
            FontSize="Small"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.48}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.51}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.23}"
            Text="{Binding SelectLens.WorkingDistance, StringFormat=镜头工作距离：\{0\}}"
            TextColor="#2196f3" />
        <Button
            Command="{Binding ShowDetailCommand}"
            FontSize="Medium"
            HeightRequest="45"
            IsEnabled="{Binding EnableDetail}"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.45}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.51}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.27}"
            Text="显示结果" />
        <Label
            FontSize="Small"
            HeightRequest="40"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.48}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.51}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.32}"
            Text="{Binding ErrorMessage}"
            TextColor="Red" />
        <Entry
            FontSize="Small"
            HorizontalTextAlignment="Center"
            Keyboard="Numeric"
            Placeholder="视场宽度"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.55}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.85}"
            Text="{Binding ViewCalcWidth}"
            TextColor="#2196f3"
            WidthRequest="70">
            <Entry.Behaviors>
                <command:EventToCommandBehavior Command="{Binding ViewWidthChangedCommand}" EventName="Completed" />
            </Entry.Behaviors>
        </Entry>
        <Label
            FontSize="Small"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.48}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.11}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.57}"
            Text="{Binding WorkingDistance}" />
        <Entry
            FontSize="Small"
            HorizontalTextAlignment="Center"
            Keyboard="Numeric"
            Placeholder="视场高度"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.05}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.94}"
            Text="{Binding ViewCalcHeight}"
            TextColor="#2196f3"
            WidthRequest="70">
            <Entry.Behaviors>
                <command:EventToCommandBehavior Command="{Binding ViewHeightChangedCommand}" EventName="Completed" />
            </Entry.Behaviors>
        </Entry>
        <Entry
            FontSize="Small"
            HorizontalTextAlignment="Center"
            Keyboard="Numeric"
            Placeholder="放大倍率"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.55}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.94}"
            Text="{Binding ViewCalcTimes}"
            TextColor="#2196f3"
            WidthRequest="70">
            <Entry.Behaviors>
                <command:EventToCommandBehavior Command="{Binding ViewTimesChangedCommand}" EventName="Completed" />
            </Entry.Behaviors>
        </Entry>
        <Label
            FontSize="Small"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.48}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.38}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.45}"
            Text="{Binding HAngle}"
            TextColor="#fa6806" />
        <Label
            FontSize="Small"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width,
                                                                  Factor=0.48}"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Width,
                                                              Factor=0.25}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                                              Property=Height,
                                                              Factor=0.5}"
            Text="{Binding VAngle}"
            TextColor="#fa6806" />
    </RelativeLayout>
</ContentPage>